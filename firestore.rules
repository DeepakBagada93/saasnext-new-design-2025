rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "deepakbagada25@gmail.com";
    }

    // Admin Access
    match /clients/{clientId} {
      allow read, write: if isAdmin();
    }

    match /projects/{projectId} {
      // Admins can read and write any project
      allow read, write: if isAdmin();
    }
    
    // Client Access
    match /projects/{projectId} {
        // Clients can query projects where their UID matches the project's userId field.
        allow list: if request.auth != null && request.auth.uid == request.query.filters[0].value;
        // Clients can get a specific project if their UID matches.
        allow get: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
