rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth.token.email == "deepakbagada25@gmail.com";
    }

    // By default, lock down all collections
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow clients to read/write their own data in these collections
    match /clients/{userId} {
      allow read, update, write: if isOwner(userId);
    }
    match /projects/{projectId} {
      allow read: if isOwner(resource.data.userId);
    }
    match /serviceRequests/{requestId} {
      allow read, create: if isOwner(request.resource.data.userId);
    }
    match /meetingRequests/{requestId} {
        allow read, create: if isOwner(request.resource.data.userId);
    }
    match /quotations/{quotationId} {
        allow read: if isOwner(resource.data.userId);
    }
    
    // Allow admins to manage all data in these collections
    match /clients/{clientId} {
        allow read, write, delete: if isAdmin();
    }
    match /projects/{projectId} {
        allow read, create, update, delete: if isAdmin();
    }
    match /serviceRequests/{requestId} {
        allow read, create, delete: if isAdmin();
    }
    match /meetingRequests/{requestId} {
        allow read, write: if isAdmin();
    }
    match /quotations/{quotationId} {
        allow read, create, update, delete: if isAdmin();
    }
  }
}
