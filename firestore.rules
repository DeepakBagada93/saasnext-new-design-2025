rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.email == "deepakbagada25@gmail.com";
    }

    match /{document=**} {
      allow read, write: if false;
    }

    match /clients/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid != null;
    }

    match /projects/{projectId} {
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      allow write: if isAdmin() && request.resource.data.keys().hasAll(['status', 'budget', 'currency', 'milestones', 'updates', 'quickCallNumber', 'whatsappLink']);
      allow create: if isAdmin();
    }
    
    match /serviceRequests/{requestId} {
        allow read, write: if request.auth.uid == resource.data.userId || isAdmin();
        allow create: if request.auth.uid != null;
        allow delete: if isAdmin();
    }

    match /quotations/{quotationId} {
        allow read: if request.auth.uid == resource.data.userId || isAdmin();
        allow create: if isAdmin();
    }
    
    match /meetingRequests/{requestId} {
      allow read, write: if request.auth.uid == resource.data.userId || isAdmin();
      allow create: if request.auth.uid != null;
    }
  }
}
