
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    match /client_profiles/{clientId} {
      // Admins can read, list, create, update, and delete any client profile
      allow read, list, write: if isAdmin();
      
      // A user can create their own profile
      allow create: if isSignedIn() && request.auth.uid == clientId;

      // A user can only get or update their own profile
      allow get, update: if isSignedIn() && request.auth.uid == clientId;
    }
    
    match /service_requests/{serviceRequestId} {
      // Admins can manage all service requests
      allow read, write, list: if isAdmin();

      // Clients can create requests for themselves
      allow create: if isSignedIn() && request.resource.data.clientId == request.auth.uid;
      
      // Clients can read requests where their UID matches the clientId field
      allow get: if isSignedIn() && resource.data.clientId == request.auth.uid;
    }

    match /projects/{projectId} {
      // Admins can manage all projects
      allow read, write, list: if isAdmin();
      
      // Clients can create projects for themselves
      allow create: if isSignedIn() && request.resource.data.clientId == request.auth.uid;

      // Clients can read projects where their UID matches the clientId field
      allow get: if isSignedIn() && resource.data.clientId == request.auth.uid;
    }

    match /invoices/{invoiceId} {
      // Admins can manage all invoices
      allow read, write, list: if isAdmin();

      // Clients can create invoices for themselves
      allow create: if isSignedIn() && request.resource.data.clientId == request.auth.uid;

      // Clients can read invoices where their UID matches the clientId field
      allow get: if isSignedIn() && resource.data.clientId == request.auth.uid;
    }
    
    match /quotations/{quotationId} {
       allow read, write, list: if isAdmin();
       allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    match /meetingRequests/{requestId} {
        allow read, write, list: if isAdmin();
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /admin_profiles/{adminId} {
        // Only the owner can manage their own admin profile
        allow read, write: if isSignedIn() && request.auth.uid == adminId;
        // No one can list all admin profiles
        allow list: if false;
    }
    
    match /roles_admin/{adminId} {
      // Any signed in user can create their own role document.
      allow create: if isSignedIn() && request.auth.uid == adminId;
      // Any signed in user can read their own role document, admins can read any.
      allow read: if (isSignedIn() && request.auth.uid == adminId) || isAdmin();
      
      // No one can list, update or delete role documents for security.
      allow list, update, delete: if false;
    }
  }
}
